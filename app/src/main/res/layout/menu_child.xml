<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingRight="10dp">

    <TextView
        android:id="@+id/item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
    android:layout_width="39dp"
    android:layout_height="40dp"
    android:inputType="number"
    android:ems="10"
    android:id="@+id/quan"
        android:layout_alignBottom="@+id/button"
        android:layout_toLeftOf="@+id/btnPlus"
        android:layout_toStartOf="@+id/btnPlus" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnPlus"
        android:src="@android:drawable/ic_input_add"
        android:layout_alignTop="@+id/btnMinus"
        android:layout_toLeftOf="@+id/btnMinus"
        android:layout_toStartOf="@+id/btnMinus" />

    <ImageButton
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/btnMinus"
        android:src="@android:drawable/ic_delete"
        android:layout_below="@+id/item_name"
        android:layout_toLeftOf="@+id/btnAddItem"
        android:layout_toStartOf="@+id/btnAddItem" />

    <Button
        android:id="@+id/btnAddItem"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:contentDescription="@string/app_name"
        android:text="Add"
        android:background="#7cd867"
        android:textColor="#302d2d"
        android:layout_alignTop="@+id/quan"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="More Info"
        android:id="@+id/button"
        android:layout_below="@+id/item_name"
        android:layout_toRightOf="@+id/item_name"
        android:layout_toEndOf="@+id/item_name"
        android:layout_alignParentRight="false"
        android:layout_alignParentLeft="true" />


</RelativeLayout>