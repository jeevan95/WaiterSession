<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.MenuTab">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linearLayout"
        android:layout_toStartOf="@+id/imageButton6"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/btFilter"
        android:layout_marginBottom="100dp">

        <ExpandableListView
            android:id="@+id/expandableListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView4"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/imageButton2"
        android:layout_alignStart="@+id/imageButton2"
        android:layout_marginTop="5dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="Filter"
        android:id="@+id/btFilter"
        android:layout_toLeftOf="@+id/btSort"
        android:layout_toStartOf="@+id/btSort"
        android:layout_alignBottom="@+id/btSort" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:text="Sort"
        android:id="@+id/btSort"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/linearLayout2"
        android:layout_toStartOf="@+id/imageButton6"
        android:layout_alignParentRight="false"
        android:layout_alignParentEnd="true"
        android:orientation="horizontal"
        android:layout_alignParentStart="false"
        android:layout_above="@+id/linearLayout"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp">

        <Button
            android:layout_width="67dp"
            android:layout_height="match_parent"
            android:id="@+id/imageButton2"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="Starter"
            android:textStyle="bold|italic"
            android:textSize="10dp" />

        <Button
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:id="@+id/imageButton3"
            android:layout_alignBottom="@+id/imageButton2"
            android:layout_toRightOf="@+id/imageButton2"
            android:text="Main Courses"
            android:textStyle="bold|italic"
            android:textSize="10dp" />

        <Button
            android:layout_width="52dp"
            android:layout_height="match_parent"
            android:id="@+id/imageButton4"
            android:layout_alignTop="@+id/imageButton3"
            android:layout_toRightOf="@+id/imageButton3"
            android:layout_toEndOf="@+id/imageButton3"
            android:text="side"
            android:textStyle="bold|italic"
            android:textSize="10dp" />

        <Button
            android:layout_width="67dp"
            android:layout_height="match_parent"
            android:id="@+id/imageButton5"
            android:layout_alignBottom="@+id/imageButton4"
            android:layout_toRightOf="@+id/imageButton4"
            android:layout_toEndOf="@+id/imageButton4"
            android:text="Dessert"
            android:textStyle="bold|italic"
            android:textSize="10dp" />

        <Button
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:id="@+id/imageButton6"
            android:layout_alignBottom="@+id/imageButton5"
            android:layout_toRightOf="@+id/imageButton5"
            android:layout_toEndOf="@+id/imageButton5"
            android:text="drink"
            android:textStyle="bold|italic"
            android:textSize="10dp" />

        <Button
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:id="@+id/button4"
            android:layout_alignBottom="@+id/imageButton5"
            android:layout_toRightOf="@+id/imageButton5"
            android:layout_toEndOf="@+id/imageButton5"
            android:text="Deals"
            android:textStyle="bold|italic"
            android:textSize="10dp" />
    </LinearLayout>

</RelativeLayout>
